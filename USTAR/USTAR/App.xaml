<Application
    x:Class="USTAR.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="using:USTAR.Themes"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Brushes.xaml" />
                <ResourceDictionary Source="Themes/Converters.xaml" />
                <ResourceDictionary Source="Themes/Frames.xaml" />
                <ResourceDictionary Source="Themes/Typography.xaml" />
                <!--Adding a Styles in Themes and relating them here -->
                <ResourceDictionary Source="Themes/GoNut.xaml" />
                <themes:Navigation />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
